<div class="container">
  <%if @posts.empty? %>
  <p>Nic na zobrazenie</p>
  <%else%>
  <div class="title">
    <%first_five%>
    <% post = @show.first %>

      <div class="top-post">
          <%= link_to image_tag(post.image.url, :align => "left"), post_path(post) %>
          <div class="text">
          <%= link_to post.title, post_path(post) %><br>
          <h5><%= post.created_at.strftime('%b %d, %Y') %></h5>
          <h5><%= link_to post.category.try(:name), category_path(post.category) %></h5>
          <h4><%= post.desc %></h4>
        </div>

     </div>
     <div class="boxcase">
       <% if @show.all[1..-1].empty? %>
       <p></p>
       <%else%>
       <% @show = @show.all[1..-1] %>
     <% @show.each do |post| %>
      <div class="box">
        <%= link_to image_tag(post.image.url, :align => "left"), post_path(post) %>
        <h4><%= link_to post.title, post_path(post) %></h4>
      </div>
      <%end%>
      <%end%>
  </div>
</div>
<hr>
  <div class="col-xs-12 col-md-8 ">


    <% if @posts.all[5..-1].empty? %>
    <p></p>
    <%else%>
    <% @posts.all[5..-1].each do |post| %>


    <div class="article">
      <div class="text-left">
        <%= link_to image_tag(post.image.url, :align => "left"), post_path(post) %>
        <h3><%= link_to post.title, post_path(post)%></h3>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
        <h6><%= link_to post.category.try(:name), category_path(post.category) %></h6>
        <p><%= post.desc %></p>

      </div>

      <% if admin_signed_in? %>
        <%= link_to "Zobrazit", post_path(post), class: "btn btn-primary" %>
        <%= link_to "Upravit", edit_post_path(post), class: "btn btn-default" %>
        <%= link_to "Zmazat", post_path(post), class: "btn btn-danger", data: {:confirm => "Ste si isty?"}, method: :delete %>
      <% end %>
      <%end%>

    </div>
    <hr>

    <% end %>

  </div>
  <div class="col-xs-6 col-md-4">
    <%= render "layouts/category_box"%>
  </div>
  <%end%>
</div>
